\def\@maketitle{%
    \newpage
    \null
    \vskip 2em%
    \begin{center}%
    \let \footnote \thanks
    {\Large\bfseries \@title \par}%
    \vskip 1.5em%
    {\normalsize
        \lineskip .5em%
        \begin{tabular}[t]{c}%
        \@author
        \end{tabular}\par}%
    \vskip 1em%
    {\normalsize \@date}%
    \end{center}%
    \par
    \vskip 1.5em}
\makeatother

